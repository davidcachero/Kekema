<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_recipe_description"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETALLE"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle de la receta"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredient_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/elaboration_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ElaboraciÃ³n"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:showYouTubeButton="false"
                app:showFullScreenButton="true"
                app:showVideoDuration="true"
                app:showVideoCurrentTime="true"
                app:autoPlay="true"
                app:videoId="rgXc3RIxGf0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/elaboration_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>